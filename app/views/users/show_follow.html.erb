<% provide(:title, @title) %>
<!--the follow-panel page when clicking the link-->
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <strong><%= @user.name %></strong>
      <span><%= link_to "return to my profile", @user %></span>
      <span ><%= pluralize(@user.microposts.count, "microposts") %></span>
    </section>
    <section class="stats">
      <%= render 'shared/follow_panel' %>
   
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
  
</div>




