<div>
<%= render 'form' %>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Dream</th>
      <th>Description</th>
      <th>Deadline</th>
      <th> Last Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @dreams.each do |dream| %>
    <tr>
      <%#= link_to dream.user.name, dream.user %>
      <%#= dream.name %>
      <td><%= link_to dream.name, dream %></td>
      <td><%= dream.content %></td>
      <td><%= dream.date %></td>
      <td><%= time_ago_in_words(dream.created_at) %> ago</td>
      
      <td><%= link_to "Create explicit plans", dream %></td>
      <td><%= link_to "Edit", edit_dream_path(dream) %></td>
      <td><%= link_to "Delete", dream, method: :delete,
                                           data: { confirm: "You sure?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate %>
</div>


