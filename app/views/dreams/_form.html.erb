<div class="filter">
<%= form_for @dream do |f| %> 
<div class="row">
  <div class="col-md-12">
    <h2>Welcome to create your dream</h2>
  </div>
</div>

 <%= render 'shared/error_messages', object: f.object %>
 <div class="row">
      <div class="col-md-8">
        <%= f.label :Dream, class: 'required' %>
      </div>
      <div class="col-md-4">
        <%= f.label :Deadline, class: 'required' %>
      </div>
</div>
<div class="row">
      <div class="col-md-8">
        <%= f.text_field :name, placeholder: "Dream here" %>
      </div>
      <div class="col-md-4">
        <%= f.date_field :date, required:true %>
      </div>
      
</div>
<div class="row">
      <div class="col-md-12">
        <%= f.label :Description, class: 'required' %>
      </div>
</div>
<div class="row">
      <div class="col-md-10">
        <%= f.text_area :content, placeholder: "Description here" %>
      </div>
      <div class="col-md-2">
        <%= f.submit "Create", class: "btn btn-primary" %>
      </div>
      
</div>
</div>

<% end %>
</div>





