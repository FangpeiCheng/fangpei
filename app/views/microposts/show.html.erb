 <br/><section class="microposts">
  <%= link_to gravatar_for(@micropost.user, size: 50), @micropost.user %>
  <span class="user"><%= link_to @micropost.user.name, @micropost.user %></span>
  <span class="content"><%= @micropost.title %></span>
  <span class="content">
    <%= @micropost.content %>
    <%= image_tag @micropost.picture.url if @micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
  </span>
  
 </section><br/>



 <!--section class="comment"-->
 
  <p> <%= link_to "Comments", '#', id: "comments-link" %> <span class="badge"> <%= @micropost.comments.count%></span></p>

  <section id="comments-section">
    
    <% @micropost.comments.each do |comment| %>
    <ol id="comments">
     
      <li>
        <%= link_to comment.user.name, comment.user %>
        <span class="date"><%= time_ago_in_words(comment.created_at) %> ago</span>
       <p>
        <%= comment.content %>
        <%= link_to "Delete", [comment.micropost, comment], method: :delete,
                                           data: { confirm: "You sure?" } %>
       </p>
    </li>
    </ol>
    <%end%>
    <%= form_for [@micropost,@micropost.comments.build], remote: true do |f| %>  
    
     <fieldset>
        <%= f.text_area :content, cols: 30, rows: 2,
                         placeholder: "write a comment..." %>
        
        <%= f.submit "Comment", class: "btn" %>
    </fieldset>
<% end %> 

 

   
 </section>
 

<%=link_to "Edit", edit_micropost_path(@micropost)%>

