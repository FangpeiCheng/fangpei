 <section class="microposts">
  <%= link_to gravatar_for(@micropost.user, size: 50), @micropost.user %>
  <span class="user"><%= link_to @micropost.user.name, @micropost.user %></span>
  <span class="content"><%= @micropost.title %></span>
  <span class="content">
    <%= @micropost.content %>
    <%= image_tag @micropost.picture.url if @micropost.picture? %>
  </span>
  
 </section><br/><br/>



 <section class="comment">
 
  <p2>Comment <span class="badge"><%= @micropost.comments.count%></span></p2></br>
   <% @micropost.comments.each do |comment| %>
     <%= comment.content %>
     - <%= link_to comment.user.name, comment.user %>
     <%#= comment.user.name %>
     
    <span class="timestamp">
    Commented <%= time_ago_in_words(comment.created_at) %> ago.
    </span>

    <%= link_to "Delete", [comment.micropost, comment], method: :delete,
                                           data: { confirm: "You sure?" } %>

   <br/>
   <%end%>

 </section>
 
<br/>

 <p>Reply to the post</p>
 <%= render 'comments/form'%>

 

