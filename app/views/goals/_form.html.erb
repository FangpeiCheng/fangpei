<!--build form for nested goal model-->
<%= form_for [@goal.dream, @goal] do |f| %>
<%#= form_for [@dream, @dream.goals.build] do |f| %>  

<div class="row">
  <div class="col-md-12">
  
</div>
</div>

 <%= render 'shared/error_messages', object: f.object %>
 <div class="row">
      <div class="col-md-8">
        <%= f.label :Goal, class: 'required' %>
      </div>
      <div class="col-md-4">
        <%= f.label :Deadline, class: 'required' %>
      </div>
</div>
<div class="row">
      <div class="col-md-8">
